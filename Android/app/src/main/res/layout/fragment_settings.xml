<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings_parent_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/pin_code_settings"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blackColor" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="38dp"
            android:layout_toStartOf="@+id/switch_pin_code"
            android:text="@string/tur_off_pin_code"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#050000"
            android:textSize="14sp" />

        <Switch
            android:id="@+id/switch_pin_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView10"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="41dp"
            android:layout_toEndOf="@+id/switch_pin_code"
            android:text="@string/tur_on_pin_code"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#050000"
            android:textSize="14sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/set_reset_pin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="@string/reset_pin_code" />

    <LinearLayout
        android:id="@+id/numbers_attempts_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/number_attempts"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/blackColor" />

        <com.hrules.horizontalnumberpicker.HorizontalNumberPicker
            android:id="@+id/horizontal_number_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/numbers_attempts_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/text_attempts"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blackColor"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textViewSSLConnection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/trust_all_certificate"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blackColor" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewSSLOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="38dp"
            android:layout_toStartOf="@+id/switch_ssl"
            android:text="@string/tur_off_pin_code"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#050000"
            android:textSize="14sp" />

        <Switch
            android:id="@+id/switch_ssl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewSSLOn"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/textViewSSLOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="41dp"
            android:layout_toEndOf="@+id/switch_ssl"
            android:text="@string/tur_on_pin_code"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#050000"
            android:textSize="14sp" />

    </RelativeLayout>

</LinearLayout>